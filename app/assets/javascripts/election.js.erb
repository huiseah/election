$(document).ready(function() {
	var currentLocation = [geoip_latitude(), geoip_longitude()];

	$('#map').mapSvg({
	    source: "<%= asset_path('australia.svg') %>",    // Path to SVG map
	    colors: {
	                base: "#730D45",
	                background: "#fff",
	                hover: "#F27405",
	                selected: "#FA1451",
	                disabled: "#ffffff",
	                stroke: "#FA1451"
	            },
	    regions :    {
	           'QLD':  {tooltip: 'USA: Click to go to Google.com', attr: {href: '/qld'}, selected: true},
	           'NSW': {tooltip: 'You are above Yemen!'},
	           'NT': {tooltip: ' France - wine and cheese!'},
	           'ACT': {tooltip: ' Kazakhstan - the ninth largest country in the world.'},
	           'TAS': {tooltip: ' Mongolia is a landlocked country in East Asia.'},
	           'SA': {tooltip: ' China is the world\'s most-populous country.'},
	           'VIC': {tooltip: ' Norway'},
	           'WA': {tooltip: ' Brazil is the largest country in South America.',popover: ' Brazil is the largest country in South America.' }
	          },
	  marks:     [
	            { c: currentLocation,
	             tooltip: 'You are here!'
	                +geoip_city()+''
	                +geoip_country_name()+''
	                +'Coordinates: '+currentLocation
	            }],
	    tooltipsMode:    'custom',
	    zoom: 1,
	    pan: 1,
	    responsive: 1
	});
});