$(document).ready(function() {
	var currentLocation = [geoip_latitude(), geoip_longitude()];

	$('#map').mapSvg({
	    source: "<%= image_path('australia.svg') %>",    // Path to SVG map
	    colors: {
	                base: "#730D45",
	                background: "#fff",
	                hover: "#F27405",
	                selected: "#FA1451",
	                disabled: "#ffffff",
	                stroke: "#FA1451"
	            },
	    regions :    {
	           'QLD':  {tooltip: 'QLD Voting Population: 2 384 179', attr: {href: '/qld'}, selected: true},
	           'NSW': {tooltip: 'NSW Voting Population: 4 009 318'},
	           'NT': {tooltip: 'NT Voting Population: 327 152'},
	           'ACT': {tooltip: 'ACT Voting Population: 327 152'},
	           'TAS': {tooltip: 'TAS Voting Population: 327 152'},
	           'SA': {tooltip: 'SA Voting Population: 979 949'},
	           'VIC': {tooltip: 'VIC Voting Population: 3 180 184'},
	           'WA': {tooltip: 'WA Voting Population: 1 204 001'}
	          },
	  marks:     [
	            { c: currentLocation,
	             tooltip: 'You are here!'
	                +geoip_city()+''
	                +geoip_country_name()+''
	                +'Coordinates: '+currentLocation
	            }],
	    tooltipsMode:    'custom',
	    zoom: 1,
	    pan: 1,
	    responsive: 1
	});
});