<div class="container">
  <h1>Party News</h1>
  <hr/>
  <div class="labor">
    <h3>Australian Labor Party</h3> 
    <% @labor_tweets[0..9].each_with_index do |tweet, i| %>
      <div class="span" id="tweet_<%= i + 1 %>" >
        <h3>"<%= tweet.text %>"</h3>
        <p><%= link_to "@" + tweet.user.screen_name, "http://twitter.com/" + tweet.user.screen_name, target: "_blank" %></p>
        <p class="time"><%= tweet.created_at.strftime("%m/%d/%Y, at %I:%M%p") %></p>
      </div>
    <% end %>
  </div>

  <div class="liberal"> 
    <h3>Liberal Party of Australia</h3>  
    <% @liberal_tweets[0..9].each_with_index do |tweet, i| %>
      <div class="span" id="tweet_<%= i + 1 %>" >
        <h3>"<%= tweet.text %>"</h3>
        <p><%= link_to "@" + tweet.user.screen_name, "http://twitter.com/" + tweet.user.screen_name, target: "_blank" %></p>
        <p class="time"><%= tweet.created_at.strftime("%m/%d/%Y, at %I:%M%p") %></p>
      </div>
    <% end %>
  </div>

  <div class="greens"> 
    <h3>The Australian Greens</h3>  
    <% @greens_tweets[0..9].each_with_index do |tweet, i| %>
      <div class="span" id="tweet_<%= i + 1 %>" >
        <h3>"<%= tweet.text %>"</h3>
        <p><%= link_to "@" + tweet.user.screen_name, "http://twitter.com/" + tweet.user.screen_name, target: "_blank" %></p>
        <p class="time"><%= tweet.created_at.strftime("%m/%d/%Y, at %I:%M%p") %></p>
      </div>
    <% end %>
  </div>
</div>
<div class="clear"></div>
<div class="container">
<h1>Public Reaction</h1>
  <hr/>
  <div class="people">
  <% @people_tweets[0..9].each do |tweet| %>
   <div class="span">
     <h3>"<%= tweet[:text] %>"</h3>
     <p><%= link_to "@" + tweet[:user][:screen_name], "http://twitter.com/" + tweet[:user][:screen_name], target: "_blank" %></p>
     <p class="time"><%= Time.parse(tweet[:created_at]).strftime("%m/%d/%Y, at %I:%M%p") %></p>
   </div>
  <% end %>
  </div>
</div>
